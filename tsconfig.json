{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@utils/*": ["./src/utils/*"],
			"@libs/*": ["./src/libs/*"],
			"@containers/*": ["./src/components/containers/*"],
			"@ui/*": ["./src/components/ui/*"],
			"@components/*": ["./src/components/*"],
			"@assets/*": ["./src/assets/*"],
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"svgr.d.ts",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
